<h1>New Student</h1>

<%= form_with scope: :student, url: students_path, local: true do |form| %>
	<p>
		<%= form.label :last %><br>
		<%= form.text_field :last %>
	</p>
	<p>
		<%= form.label :first %><br>
		<%= form.text_field :first %>
	</p>
	<p>
		<%= form.label :gpa %><br>
		<%= form.number_field(:gpa, step: 0.1) %>
	</p>
	<p>
		<%= form.label :date %><br>
		<%= form.date_field :date %>
	</p>
	<p>
		<%= form.submit %>
	</p>
<% end %>